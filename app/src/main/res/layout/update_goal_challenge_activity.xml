<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Savings Goal Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Savings Goal"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextSavingsGoal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Savings Goal"
        android:inputType="numberDecimal" />

    <!-- Spending Challenge Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Update Spending Challenge"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextSpendingChallenge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Spending Challenge"
        android:inputType="numberDecimal" />

    <!-- Save Button -->
    <Button
        android:id="@+id/buttonSaveGoalChallenge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"
        android:text="Save" />
</LinearLayout>