<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Quick Overview Section Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quick Overview"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <!-- Quick Overview Cards -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:paddingBottom="16dp">

            <!-- Daily Spending Card -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="16dp"
                android:layout_marginEnd="8dp">

                <TextView
                    android:id="@+id/textViewDailySpendingHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Daily Spending"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textViewDailySpending"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$50.00"
                    android:textSize="24sp"
                    android:textColor="@color/primary" />
            </LinearLayout>

            <!-- Weekly Spending Card -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="16dp"
                android:layout_marginStart="8dp">

                <TextView
                    android:id="@+id/textViewWeeklySpendingHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Weekly Spending"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textViewWeeklySpending"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$250.00"
                    android:textSize="24sp"
                    android:textColor="@color/primary" />
            </LinearLayout>
        </LinearLayout>

        <!-- Goals and Challenges Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Goals and Challenges"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:paddingBottom="16dp">

            <!-- Goal Tracking Card -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="16dp"
                android:layout_marginEnd="8dp">

                <TextView
                    android:id="@+id/textViewSavingsGoalHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Savings Goal"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textViewSavingsGoal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$1,500 / $5,000"
                    android:textSize="18sp"
                    android:textColor="@color/primary" />
            </LinearLayout>

            <!-- Spending Challenge Card -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="16dp"
                android:layout_marginStart="8dp">

                <TextView
                    android:id="@+id/textViewChallenge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Spending Challenge"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$200 Left"
                    android:textSize="18sp"
                    android:textColor="@color/primary" />
            </LinearLayout>
        </LinearLayout>

        <!-- Recent Activity Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recent Activity"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewRecentActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>