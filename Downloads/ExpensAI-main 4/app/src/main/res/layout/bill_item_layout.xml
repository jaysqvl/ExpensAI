<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    android:layout_marginBottom="8dp"
    android:background="@color/bill_tile_shade">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/billNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Electricity Bill"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/billDetailsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Due: Nov 30, 2024 | Amount: $120"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_below="@id/billNameTextView"
            android:layout_marginTop="4dp" />

        <ImageButton
            android:id="@+id/buttonDeleteBill"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_delete"
            android:background="@drawable/transparent_background"
            android:contentDescription="Delete Bill"
            android:tint="@android:color/holo_red_dark"
            android:layout_marginEnd="4dp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>