<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewUpdateGoalHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Goals and Challenges"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/editTextAmountSaved"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter amount saved so far"
        android:inputType="numberDecimal"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/editTextSavingsGoal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter total savings goal"
        android:inputType="numberDecimal"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/editTextSpendingChallenge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter spending challenge description"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/buttonSaveGoalChallenge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_gravity="center_horizontal" />
</LinearLayout>