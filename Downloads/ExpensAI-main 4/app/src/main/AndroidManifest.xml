<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" android:required="true" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CMPT362_FinalProject"
        tools:targetApi="31">
        <activity
            android:name=".InitialActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- AddBillActivity -->
        <activity
            android:name=".AddBillActivity"
            android:exported="false"
            android:label="@string/add_bill_activity_label" />

        <!-- UpdateGoalChallengeActivity -->
        <activity
            android:name=".ui.home.UpdateGoalChallengeActivity"
            android:exported="false"
            android:label="@string/update_goal_challenge_activity_label" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.example.cmpt362_finalproject.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">

        </provider>
    </application>

</manifest>